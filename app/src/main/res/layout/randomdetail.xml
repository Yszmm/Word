<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeff4">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/random_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="relative"
        android:textSize="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:textColor="#000000"
        android:textStyle="italic"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/random_phono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[ˈrelətɪv]"
            android:textSize="20dp"
            />
        <ImageView
            android:id="@+id/random_speech"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:paddingLeft="10dp"
            android:src="@mipmap/icon_speaker_off"/>
    </LinearLayout>

    <TextView
        android:id="@+id/random_trans"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:textSize="16dp"
        android:maxLines="2"
        android:text="adj. 比较的;相对的;相关联的 \n n. 亲戚;亲属;同类事物"
        />
   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:layout_height="match_parent">

    <Button
        android:id="@+id/random_no"
        android:layout_width="34dp"
        android:layout_height="30dp"
        android:layout_marginTop="130dp"
        android:layout_gravity="center"
        android:background="@mipmap/timg"

        />
    <Button
        android:id="@+id/random_next"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:text="下一个"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:background="@drawable/check_border"

        />
   </LinearLayout>
    </LinearLayout>
</ScrollView>